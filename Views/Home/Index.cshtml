@model List<MenuItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 rounded shadow position-relative overflow-hidden" style="background: linear-gradient(135deg, #111 0%, #222 50%, #111 100%);">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: radial-gradient(circle at 20% 20%, rgba(255,255,255,.05), transparent 40%), radial-gradient(circle at 80% 20%, rgba(255,255,255,.05), transparent 40%);"></div>
    <div class="text-center text-white position-relative">
        <h1 class="display-4 fw-bold mb-3"><span style="font-size: 75px">ℛ</span>estaurant <span style="font-size: 75px">𝒦</span>ifo</h1>
        <p class="lead mb-2">Kifo - A World of Flavors</p>
        <p class="mb-4">Indulge in a diverse range of delicious dishes from around the globe. Whether you're craving something hearty, light, or exotic, our menu has something for everyone!</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Home" asp-action="Menu" class="btn btn-light btn-lg text-dark fw-semibold">View Full Menu</a>
        </div>
    </div>
</div>

<div class="container mt-5" id="specialties">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark">Our Specialties</h2>
        <p class="text-muted">Chef-curated picks from our kitchen — updated daily.</p>
        <hr class="w-25 mx-auto" />
    </div>
    <div class="row">
        @for (int i = 0; i < 8 && i < Model.Count; i++)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                <div class="card shadow-lg w-100 h-100 bg-dark text-white border-0">
                    <div class="ratio ratio-4x3 bg-secondary">
                        <img src="@Model[i].ImgUrl" class="card-img-top" alt="@Model[i].Description" style="object-fit: cover;" loading="lazy" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold">@Model[i].Name</h5>
                        <p class="card-text text-light-50">@Model[i].Description</p>
                        <div class="mt-auto">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
