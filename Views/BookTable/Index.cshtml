@model List<Table>
@using System.Linq

@{
    var availableTables = Model.Where(t => t.IsAvailable).ToList();
}

<div class="container py-5">
    <div class="row justify-content-center text-center mb-4">
        <div class="col-lg-8">
            <h1 class="display-6 fw-bold mb-2">Book a Table</h1>
            <p class="text-muted mb-0">Choose the table that fits your group.</p>
        </div>
    </div>

    @if (!availableTables.Any())
    {
        <div class="alert alert-warning text-center shadow-sm" role="alert">
            All tables are currently booked. Please check back soon.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var table in availableTables)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 border shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="badge bg-success text-uppercase">Available</span>
                                <span class="badge bg-dark">Seats: @table.TableSeats</span>
                            </div>
                            <h5 class="card-title mb-2">Table @table.TableID</h5>
                            <a asp-action="Book" asp-route-tableID="@table.TableID" asp-controller="BookTable" class="btn btn-outline-dark w-100 mt-auto">Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

